{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./build/",
    "removeComments": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "tests"
  ]
}
